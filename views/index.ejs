<html>
    <%- include("./partials/head.ejs") %>
    <body>
        <h1>Timeline</h1>
<div class="link-container">
    <nav class="links">         
    </nav>
</div>
<div class="container">
<section id="sec">
    <form action="/post" method="post">
        <input type="text" name="title" id="user-name" placeholder="name" required><br>
        <textarea name="article" id="post" placeholder="message" required></textarea>
        <button>Post a message</button>
    </form>
</section><br>
<div class="user-list">
    <% for (let i=0; i<data.length; i++) { %>
        <div class="user-list-container"> 
            <div class="text">
                <p class="name-date"><span><%= data[i].title %></span></p>
                <p class="user-post"><%= data[i].article %></p> 
            </div>
            <br>                             
            <div class="btns">                 
                <form action="/delete-user/<%= data[i]._id %>" method="post">
                    <button>Delete</button>
                </form>
            </div>
            <p class="time"><%= data[i].created_at %></p>                
        </div>
    <% } %>
</div>
<%- include("./partials/footer.ejs") %>
</body>
</html>